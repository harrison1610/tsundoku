<%= render "books/left_header" %>

<div class="signin">
  <h2 class="signin__title">ログイン</h2>

    <div class="signin__contents">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="signin__contents__field">
          <%= f.label :email, "メールアドレス", {class: 'signin__contents__field--label'} %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="signin__contents__field">
          <%= f.label :password, "パスワード", {class: 'signin__contents__field--label'} %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="signin__contents__field__check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "次回から自動的にログイン" %>
          </div>
        <% end %>

        <div class="signin__contents__field__actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>

  </div>
</div>