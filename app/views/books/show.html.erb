<div class="top__main">
  <section class="top__main--section">
  
    <div class="top__main__contents">
      <div class="top__main__contents__glid">

        <div class="top__main__contents__glid__header">
          <div class="top__main__contents__glid__header--title"><span>タイトル： </span><%= @book.title %></div>
            <div class="top__main__contents__glid__header__others">
              <ul class="top__main__contents__glid__header__others__ul">
                <li class="top__main__contents__glid__header__others__ul--li">
                  <i class="fas fa-angle-down"></i>
                    <ul class="top__main__contents__glid__header__others__ul--ul">
                      <li class="top__main__contents__glid__header__others__ul--ul--li"><span><%= link_to "編集", "/" %></span></li>
                      <li class="top__main__contents__glid__header__others__ul--ul--li"><span><%= link_to "詳細", "/" %></span></li>
                      <li class="top__main__contents__glid__header__others__ul--ul--li"><span><%= link_to '削除', "/books/#{@book.id}", method: :delete %></span></li>
                    </ul>
                </li>
              </ul>
            </div>
        </div>

        <div class="top__main__contents__glid__text">
          <div class="top__main__contents__glid__text--content"><span>内容： </span><%= @book.content %></div>
        </div>

        <div class="top__main__contents__glid__footer">
          <div class="top__main__contents__glid__footer--time"><span>投稿日時： </span><%= @book.created_at %></div>
        </div>

      </div>
    </div>

  </div>
</div>